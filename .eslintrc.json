{
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "standard-with-typescript",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "react"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      // your rules here
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  